@prefix lv2:  <http://lv2plug.in/ns/lv2core#>.
@prefix doap: <http://usefulinc.com/ns/doap#>.
@prefix epp: <http://lv2plug.in/ns/ext/port-props#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/>.
@prefix mod: <http://moddevices.com/ns/modgui#>.
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.

<http://moddevices.com/plugins/mod-devel/SwitchTrigger4>
a lv2:Plugin, lv2:UtilityPlugin;

doap:name "SwitchTrigger4";

doap:developer [
    foaf:name "Luis Fagundes";
    foaf:homepage <>;
    foaf:mbox <mailto:lhfagundes@hacklab.com.br>;
    ];

doap:maintainer [
    foaf:name "MOD Team";
    foaf:homepage <http://moddevices.com>;
    foaf:mbox <mailto:devel@moddevices.com>;
    ];

rdfs:comment """
The Switch Trigger gets one audio stream as input and chooses one of four outputs
to route the audio. The output channel can be selected by triggering the corresponding
control.

The switch trigger was designed to use the MOD on stage. By addressing each control to a
footswitch, the musician can quickly access a desired chain of effects.
""";

doap:license <GPL>;

lv2:minorVersion 1;
lv2:microVersion 2;

lv2:port 
[
    a lv2:AudioPort, lv2:InputPort;
    lv2:index 0;
    lv2:symbol "In";
    lv2:name "In";
],
[
    a lv2:AudioPort, lv2:OutputPort;
    lv2:index 1;
    lv2:symbol "Out1";
    lv2:name "Out 1";
],
[
    a lv2:AudioPort, lv2:OutputPort;
    lv2:index 2;
    lv2:symbol "Out2";
    lv2:name "Out 2";
],
[
    a lv2:AudioPort, lv2:OutputPort;
    lv2:index 3;
    lv2:symbol "Out3";
    lv2:name "Out 3";
],
[
    a lv2:AudioPort, lv2:OutputPort;
    lv2:index 4;
    lv2:symbol "Out4";
    lv2:name "Out 4";
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 5;
    lv2:symbol "channel1";
    lv2:name "Channel One";
    lv2:portProperty lv2:toggled;
    lv2:portProperty epp:trigger;
    lv2:default 0;
    lv2:minimum 0;
    lv2:maximum 1;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 6;
    lv2:symbol "channel2";
    lv2:name "Channel Two";
    lv2:portProperty lv2:toggled;
    lv2:portProperty epp:trigger;
    lv2:default 0;
    lv2:minimum 0;
    lv2:maximum 1;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 7;
    lv2:symbol "channel3";
    lv2:name "Channel Three";
    lv2:portProperty lv2:toggled;
    lv2:portProperty epp:trigger;
    lv2:default 0;
    lv2:minimum 0;
    lv2:maximum 1;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 8;
    lv2:symbol "channel4";
    lv2:name "Channel Four";
    lv2:portProperty lv2:toggled;
    lv2:portProperty epp:trigger;
    lv2:default 0;
    lv2:minimum 0;
    lv2:maximum 1;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 9;
    lv2:symbol "current_channel";
    lv2:name "Current Channel";
    lv2:portProperty lv2:integer;
    lv2:portProperty lv2:enumeration ;
        lv2:scalePoint [rdfs:label "Channel 1"; rdf:value 0];
        lv2:scalePoint [rdfs:label "Channel 2"; rdf:value 1];
        lv2:scalePoint [rdfs:label "Channel 3"; rdf:value 2];
        lv2:scalePoint [rdfs:label "Channel 4"; rdf:value 3];
    lv2:default 0;
    lv2:minimum 0;
    lv2:maximum 3;
];
mod:gui [
    mod:resourcesDirectory <modgui>;
    mod:iconTemplate <modgui/icon-switchtrigger4.html>;
    mod:stylesheet <modgui/stylesheet-switchtrigger4.css>;
    mod:javascript <modgui/javascript.js>;
    mod:screenshot <modgui/SwitchTrigger4.png>;
    mod:thumbnail <modgui/SwitchTrigger4-thumb.png>;
].
